<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.database.dao.RolesDao">

	<!--实体映射-->
	<resultMap id="RolesResultMap" type="Roles">
		<!---->
		<id property="id" column="id" />
		<!--角色名称-->
		<result property="roleName" column="role_name" />
		<!--创建人-->
		<result property="createUser" column="create_user" />
		<!--创建时间-->
		<result property="createTime" column="create_time" />
	</resultMap>


	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
	 t.id,	 t.role_name,	 t.create_user,	 t.create_time
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectById" resultType="Roles" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM u_roles t 
		 WHERE t.id = #{id}
	</select>
	



	<!-- 查询（根据条件查询集合） -->
	<select id="selectRolesList" resultMap="RolesResultMap" parameterType="Roles">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM u_roles t 
	<where>
		 <trim prefix=" " suffix=" " suffixOverrides=" and " >
			<if test="id != null  and id!=''">
				 t.id = #{id}
			</if>
			<if test="roleName != null  and roleName!=''">
				 t.role_name = #{roleName}
			</if>
			<if test="createUser != null  and createUser!=''">
				 t.create_user = #{createUser}
			</if>
			<if test="createTime != null  and createTime!=''">
				 t.create_time = #{createTime}
			</if>
		 </trim>
	</where>
		 limit #{startRow},#{pageSize}
	</select>

	<!-- 查询（根据条件查询集合总数） -->
	<select id="selectRolesCount" resultType="java.lang.Integer" parameterType="Roles">
		 SELECT count(*) FROM  u_roles t 
	<where>
		 <trim prefix=" " suffix=" " suffixOverrides=" and " >
			<if test="id != null and id!=''">
				 t.id = #{id}
			</if>
			<if test="roleName != null and roleName!=''">
				 t.role_name = #{roleName}
			</if>
			<if test="createUser != null and createUser!=''">
				 t.create_user = #{createUser}
			</if>
			<if test="createTime != null and createTime!=''">
				 t.create_time = #{createTime}
			</if>
		 </trim>
	</where>
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteById" parameterType="java.lang.String">
		 DELETE FROM u_roles t 
		 WHERE id = #{id}
	</delete>

	<!--删除：根据对象删除-->
	<delete id="deleteRoles" parameterType="Roles">
		 DELETE FROM u_roles
		 WHERE id = #{id}
	</delete>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insertRoles" parameterType="Roles">
		 INSERT INTO u_roles
		 <trim prefix="(" suffix=")" suffixOverrides="," >
				 id,
			<if test="roleName != null and roleName!=''">
				 role_name,
			</if>
			<if test="createUser != null and createUser!=''">
				 create_user,
			</if>
			<if test="createTime != null and createTime!=''">
				 create_time,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
				 uuid(),
			<if test="roleName!=null and roleName!=''">
				 #{roleName},
			</if>
			<if test="createUser!=null and createUser!=''">
				 #{createUser},
			</if>
			<if test="createTime!=null and createTime!=''">
				 #{createTime},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="updateRoles" parameterType="Roles">
		 UPDATE u_roles
 		 <set> 
			<if test="roleName != null and roleName!=''">
				 role_name = #{roleName},
			</if>
			<if test="createUser != null and createUser!=''">
				 create_user = #{createUser},
			</if>
			<if test="createTime != null and createTime!=''">
				 create_time = #{createTime},
			</if>
 		 </set>
		 WHERE id = #{id}
	</update>

</mapper>